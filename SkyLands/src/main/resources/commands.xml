<!--
For an azerty keyboard
-->

<Controller>
  <ContinuousAction id="MoveLeft">
    <Keyboard>KC_A</Keyboard>
    <Keyboard>KC_LEFT</Keyboard>
  </ContinuousAction>
  <ContinuousAction id="MoveRight">
    <Keyboard>KC_D</Keyboard>
    <Keyboard>KC_RIGHT</Keyboard>
  </ContinuousAction>
  <ContinuousAction id="MoveUp">
    <Keyboard>KC_E</Keyboard>
    <Keyboard>KC_PGUP</Keyboard>
  </ContinuousAction>
  <ContinuousAction id="MoveDown">
    <Keyboard>KC_Q</Keyboard>
    <Keyboard>KC_PGDOWN</Keyboard>
  </ContinuousAction>
  <ContinuousAction id="MoveForward">
    <Keyboard>KC_W</Keyboard>
    <Keyboard>KC_UP</Keyboard>
  </ContinuousAction>
  <ContinuousAction id="MoveBack">
    <Keyboard>KC_S</Keyboard>
    <Keyboard>KC_DOWN</Keyboard>
  </ContinuousAction>
  
  <SingleAction id="Jump">
    <Keyboard>KC_SPACE</Keyboard>
    <Xbox>A</Xbox>
  </SingleAction>
  <SingleAction id="Sprint">
    <Keyboard>KC_LSHIFT</Keyboard>
    <Xbox>LeftStick</Xbox>
  </SingleAction>
  <SingleAction id="Levitate">
    <Keyboard>KC_E</Keyboard>
    <Keyboard>KC_PGUP</Keyboard>
    <Xbox>Y</Xbox>
  </SingleAction>
  <SingleAction id="Dance">
    <Keyboard>KC_NUMPAD1</Keyboard>
    <Xbox>DPadLeft</Xbox>
  </SingleAction>
  <SingleAction id="MainAction">
    <Mouse>Left</Mouse>
    <Xbox>RightTrigger</Xbox>
  </SingleAction>
  <SingleAction id="SecondaryAction">
    <Mouse>Right</Mouse>
    <Xbox>LeftTrigger</Xbox>
  </SingleAction>
  <SingleAction id="MoveSelectorLeft">
    <Mouse>MoveZ+</Mouse>
    <Xbox>LeftShoulder</Xbox>
  </SingleAction>
  <SingleAction id="MoveSelectorRight">
    <Mouse>MoveZ-</Mouse>
    <Xbox>RightShoulder</Xbox>
  </SingleAction>
  <SingleAction id="Inventory">
    <Keyboard>KC_I</Keyboard>
    <Xbox>X</Xbox>
  </SingleAction>
  <SingleAction id="Start">
    <Keyboard>KC_ESCAPE</Keyboard>
    <Xbox>Start</Xbox>
  </SingleAction>
</Controller>